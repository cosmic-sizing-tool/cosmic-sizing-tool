# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /team                       controllers.Application.team()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)




# Home page
GET     /                           controllers.Application.index()
GET		/usertest    				controllers.TeamMemberCtrl.index()
#GET 	/user/settings     		    controllers.TeamMemberCtrl.settings()
GET		/user/:userInfo     		controllers.TeamMemberCtrl.getUser(userInfo: String)
POST	/users						controllers.TeamMemberCtrl.createUser()
POST    /user/:id/orgs				controllers.TeamMemberCtrl.addOrganisation(id: Long)
POST	/organisations		  		controllers.OrganisationCtrl.createOrganisation()
PUT     /users/:email				controllers.TeamMemberCtrl.updateInformation(email: String)
 
 

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
